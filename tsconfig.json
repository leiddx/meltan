{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"module": "ESNext",
		"moduleResolution": "node",
		"outDir": "./dist",
		"resolveJsonModule": true,
		"rootDir": "./",
		"sourceMap": true,
		"target": "es2020"
	},
	"exclude": [
		"node_modules",
		".vscode"
	],
	"ts-node": {
		"files": true,
		"transpileOnly": true
	}
}